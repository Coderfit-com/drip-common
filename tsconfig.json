
{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "exclude": [
    "constants",
    "utils",
    "node_modules",
    "**/*.spec.ts"
  ]
}